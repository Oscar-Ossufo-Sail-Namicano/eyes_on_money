<MainScreen>:
    balance_label: balance_label
    income_label: income_label
    expense_label: expense_label
    username_label: username_label
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 20, 20, 20]
        spacing: 20

        # Cartão de Saldo
        BoxLayout:
            size_hint_y: None
            height: '100dp'
            canvas.before:
                Color:
                    rgba: 96/255, 74/255, 215/255, 1  # Cor de fundo azul suave
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
            Label:
                id: balance_label
                text: '\u20AC31,850.88'  # Exemplo de saldo
                font_size: 38
                color: 1, 1, 1, 1
                bold: True
                halign: 'center'
                valign: 'middle'

        # Receitas e Despesas
        BoxLayout:
            size_hint_y: None
            height: '120dp'
            spacing: 20

            # Cartão de Despesas
            BoxLayout:
                size_hint_x: 0.5
                canvas.before:
                    Color:
                        rgba: 0.9, 0.6, 0.9, 1  # Cor de fundo roxa
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]
                Label:
                    id: expense_label
                    text: '\u20AC7,492.12\n\nExpenses'
                    font_size: 32
                    color: 1, 1, 1, 1
                    halign: 'center'
                    valign: 'middle'

            # Cartão de Receitas
            BoxLayout:
                size_hint_x: 0.5
                canvas.before:
                    Color:
                        rgba: 96/255, 74/255, 215/255, 1  # Cor de fundo azul
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]
                Label:
                    id: income_label
                    text: '\u20AC14,700.35\n\nIncome'
                    font_size: 32
                    color: 1, 1, 1, 1
                    halign: 'center'
                    valign: 'middle'

        # Lista de Contas
        BoxLayout:
            orientation: 'horizontal'
            padding: 0, 10
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1  # Fundo escuro
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
            Label:
                text: 'Usuário:' 
                font_size: 28
                color: 1, 1, 1, 1
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                bold: True
                size_hint_x: .5
            Label:
                id: username_label
                text: 'Desconhecido' 
                font_size: 25
                color: 1, 1, 1, 1
            MDTextButton:
                text: 'SAIR' 
                font_size: 25
                color: 1, 0, 0, 1
                pos_hint: {"center_x": .5, "center_y": .5}
                on_press: app.root.current='login'
            BoxLayout:
                size_hint_x: .05

        BoxLayout
        # Botão Flutuante
        MDFloatingActionButton:
            icon: 'plus'
            md_bg_color: 96/255, 74/255, 215/255, 1  # Cor azul
            pos_hint: {'center_x': 0.9, 'center_y': 0.06}
            on_press: app.root.current='add_transaction'
        BoxLayout:
            size_hint_y: .5

        # Navegação Inferior
        MDBottomNavigation:
            panel_color: [0, 0, 0, 1]
            #text_color_active: [1, 1, 1, 1]
            text_color_active: [0.7, 0.7, 0.7, 1]
            text_color_normal: [0.7, 0.7, 0.7, 1]
            current: 'home'
            MDBottomNavigationItem:
                name: 'home'
                icon: "home"
                text: 'Home'
                on_tab_press: app.root.current='main'
            MDBottomNavigationItem:
                icon: "history"
                text: 'Transações'
                on_tab_press: app.root.current='history'
            MDBottomNavigationItem:
                icon: "file-chart"
                text: 'Relatórios'
                on_tab_press: app.root.current='reports'
            MDBottomNavigationItem:
                icon: 'cog'
                text: 'Config.'
                on_tab_press: app.root.current='settings'
